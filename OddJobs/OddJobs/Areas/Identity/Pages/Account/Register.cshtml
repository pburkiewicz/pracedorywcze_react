@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="row">
    <div class="register-form login-register-form">    
        <form id="account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="avatar"><i class="fa fa-briefcase"></i></div>
            <h4 class="modal-title">Zarejestruj się</h4>
            <div class="form-group">
                <input asp-for="Input.Email" type="text" class="form-control" placeholder="Email" required="required">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" required="required">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Powtórz hasło" required="required">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6">
                        <input asp-for="Input.FirstName" type="text" class="form-control" placeholder="Imię" required="required">
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-xs-6">
                        <input asp-for="Input.LastName" type="text" class="form-control" placeholder="Nazwisko" required="required">
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input asp-for="Input.PhoneNumber" type="text" class="form-control" placeholder="Numer telefonu" required="required">
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6">
                        <input asp-for="Input.City" type="text" class="form-control" placeholder="Miasto" required="required">
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="col-xs-6">
                        <input asp-for="Input.ZipCode" type="text" class="form-control" placeholder="Kod pocztowy" required="required">
                        <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input asp-for="Input.Street" type="text" class="form-control" placeholder="Ulica" required="required">
                <span asp-validation-for="Input.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6">
                        <input asp-for="Input.HouseNumber" type="text" class="form-control" placeholder="Numer domu" required="required">
                        <span asp-validation-for="Input.HouseNumber" class="text-danger"></span>
                    </div>
                    <div class="col-xs-6">
                        <input asp-for="Input.FlatNumber" type="text" class="form-control" placeholder="Numer mieszkania" required="required">
                        <span asp-validation-for="Input.FlatNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
           
            <input type="submit" class="btn btn-primary btn-block btn-lg" value="Zarejestruj">
        </form>			
        <div class="text-center small">Masz konto?<a asp-page="./Login"  asp-route-returnUrl="@Model.ReturnUrl">Zaloguj się</a></div>
    </div>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
