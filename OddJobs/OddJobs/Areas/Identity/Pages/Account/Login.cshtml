@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="row">
    <div class="login-form login-register-form">    
        <form id="account" method="post" >
            <div class="avatar"><i class="fa fa-user"></i></div>
            <h4 class="modal-title text-light">Zaloguj się</h4>
            <div class="form-group">
                <input asp-for="Input.Email" type="text" class="form-control text-light" placeholder="Email" required="required">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" type="password" class="form-control text-light" placeholder="Hasło" required="required">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group small clearfix">
                <label class="checkbox-inline text-light">
                    <input asp-for="Input.RememberMe" class="bg-dark"/>
                    Zapamiętaj mnie</label>
            </div>
            <input type="submit" class="btn btn-success btn-block btn-lg" value="Zaloguj">
        </form>			
        <div class="text-center small">Nie masz konta?<a asp-page="./Register"  asp-route-returnUrl="@Model.ReturnUrl"> Zarejestruj się</a></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
